[user]
	name = Matt Hackett
	email = richtaur@gmail.com

[color]
	branch = auto
	diff = auto
	status = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold

[color "status"]
	added = cyan
	changed = green
	untracked = red

[diff]
	tool = "FileMerge"

[difftool]
	prompt = false

[difftool "Kaleidoscope"]
	cmd = "fmdiff git \"$LOCAL\" \"$REMOTE\""
